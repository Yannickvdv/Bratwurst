<div id="main">
    <div id="reel">
        <!-- Header Item -->
        <div id="header" class="item" data-width="400">
            <div class="inner">
                <h1>Bratwurst Page</h1>
                <p>
                    The #1 site for bratwurst.
                </p>
            </div>
       </div>

        @foreach (var item in Model)
        {
            <article class="item thumb" data-width="282">
                <h2>@item.caption</h2>
                <a href="@item.imageUrl" class="image"><img src="@item.imageUrl" alt="@item.tags"></a>
                <a href="Like">👍🏻</a>
                @Html.ActionLink("👍🏻", "likePicture", "Home", item.ID, "admin@test.nl")
            </article>
        }
    </div>
</div>


