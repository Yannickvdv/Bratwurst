<div id="main">
    <div id="reel">
        <!-- Header Item -->
        <div id="header" class="item" data-width="400">
            <div class="inner">
                <h1>Bratwurst Page</h1>
                <p>
                    The #1 site for bratwurst.
                </p>
            </div>
       </div>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <article class="item thumb" data-width="282">
                    <h2>@Html.ActionLink("👍🏻", "likePicture", "Home", new { photoID = item.ID, userEmail = "admin@test.nl" }, null) @item.amountOfVoters @item.caption  </h2>
                    <a href="@item.imageUrl" class="image"><img src="@item.imageUrl" alt="@item.tags"></a>
                </article>
            }
        }
        
    </div>
</div>


