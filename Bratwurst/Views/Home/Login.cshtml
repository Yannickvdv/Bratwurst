
@{
    ViewBag.Title = "Login";
}

<div id="main">
    <!-- Header Item -->
    <div id="login">
        <h1>Login</h1>
        <form method="post">
            <fieldset>
                <div>
                    <label for="username">Username:</label>
                    <input type="text" name="username" value="" />
                </div>
                <div>
                    <label for="password">Password:</label>
                    <input type="password" name="password" value="" />
                </div>
                <div>
                    <br />
                    <input type="submit" value="Login" class="submit" />
                </div>
            </fieldset>
        </form>
    </div>
</div>